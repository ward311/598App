<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".setting.Setting_Information">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="#19B0ED">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/back_imgBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:background="#19B0ED"
                android:src="@drawable/back_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司資訊"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/logo_long"
            android:background="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/informationEdit_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="修改"
        android:textColor="#F58039"
        android:background="#FFFFFFFF"
        android:layout_gravity="right"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="公司地址"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/company_address_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="高雄市左營區文學路309號"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/company_address_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:inputType="text"
                    android:hint="高雄市左營區文學路309號"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="公司電話"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/company_phone_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="07-3592001"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/company_phone_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:inputType="text"
                    android:hint="07-3592001"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="員工人數"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/employee_number_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="50人"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/employee_number_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:inputType="text"
                    android:hint="50人"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="公司網址"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/company_url_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="https://www.movehome.com.tw"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/company_url_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:inputType="text"
                    android:hint="https://www.movehome.com.tw"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="公司信箱"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="top"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/company_email_S"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="movehome@gmail.com"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/company_email_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:inputType="textEmailAddress"
                    android:hint="movehome@gmail.com"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Line帳號"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="top"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/company_line_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="id:movehome1234567"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/company_line_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:inputType="textEmailAddress"
                    android:hint="id:movehome1234567"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="公司理念"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="top"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/company_idea_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text=
                        "巨力搬家大師於民國89年成立至今，已協助45000個家庭及5600個企業完成喬遷的大事，也獲得顧客近98%的服務滿意度。多年來，巨力搬家大師不斷投入人員訓練、人才培訓，更以人性化、制度化來做為人員管理的方針。"
                    android:gravity="top"/>
                <EditText
                    android:id="@+id/company_idea_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:inputType="text"
                    android:hint="巨力搬家大師於民國89年成立至今，已協助45000個家庭及5600個企業完成喬遷的大事，也獲得顧客近98%的服務滿意度。多年來，巨力搬家大師不斷投入人員訓練、人才培訓，更以人性化、制度化來做為人員管理的方針。"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/finished_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">
                <Button
                    android:id="@+id/companyInformation_finished_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/roundedbutton"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
