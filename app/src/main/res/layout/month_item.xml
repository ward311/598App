<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019年"
        android:textColor="#000000"
        android:textSize="35sp"/>

    <LinearLayout
        android:id="@+id/one_to_six_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/january_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="1月"
            android:textColor="#19B0ED" />

        <Button
            android:id="@+id/february_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="2月"
            android:textColor="#19B0ED" />

        <Button
            android:id="@+id/march_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="3月"
            android:textColor="#19B0ED" />

        <Button
            android:id="@+id/april_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="4月"
            android:textColor="#19B0ED" />

        <Button
            android:id="@+id/may_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="5月"
            android:textColor="#19B0ED" />

        <Button
            android:id="@+id/june_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="6月"
            android:textColor="#19B0ED" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/seven_to_twelve_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/july_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="7月"
            android:textColor="#19B0ED" />

        <Button
            android:id="@+id/august_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="8月"
            android:textColor="#19B0ED" />

        <Button
            android:id="@+id/september_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="9月"
            android:textColor="#19B0ED" />

        <Button
            android:id="@+id/october_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="10月"
            android:textColor="#19B0ED" />

        <Button
            android:id="@+id/november_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="11月"
            android:textColor="#19B0ED" />

        <Button
            android:id="@+id/december_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/month_btn_drawable"
            android:text="12月"
            android:textColor="#1E7695" />
    </LinearLayout>
</LinearLayout>