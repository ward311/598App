                    <Button
                        android:id="@+id/check_bonus_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="確認獎金分潤"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/roundedbutton"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
