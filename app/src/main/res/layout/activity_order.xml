<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearOrder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".order.Order">

    <LinearLayout
        android:id="@+id/LinearHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#19B0ED"
        android:orientation="vertical">

        <TextView
            android:id="@+id/month_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="十月"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previous_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#19B0ED"
                android:scaleType="centerCrop"
                android:src="@drawable/back_white" />

            <TextView
                android:id="@+id/week_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:gravity="center"
                android:text="10.01-10.06"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#19B0ED"
                android:scaleType="centerCrop"
                android:src="@drawable/back_right" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearTopNav"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/order_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:text="訂單"
            android:textColor="#FB8527" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#989898" />

        <Button
            android:id="@+id/bookingOrder_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:text="已排班訂單" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#989898" />

        <Button
            android:id="@+id/todayOrder_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:text="當日工單" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#989898" />

        <Button
            android:id="@+id/cancelOrder_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:text="已取消" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#989898" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#989898" />

    <ScrollView
        android:id="@+id/order_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <LinearLayout
            android:id="@+id/LinearOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstOrder_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/timeLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dateTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/08"
                        android:textColor="#FB8527"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9:00"
                        android:textColor="#FB8527"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/peopleDetail1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/nameLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="唐文心"
                            android:textColor="#19B0ED"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/name2Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="小姐" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/phoneText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0933669877" />

                    <TextView
                        android:id="@+id/addressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高雄市三民區建國二路15號" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iconLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/new_icon" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#989898" />


            <LinearLayout
                android:id="@+id/peopleDetailLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/timeLayout2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dateTimeText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/03"
                        android:textColor="#FB8527"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/timeText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9:30"
                        android:textColor="#FB8527"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/peopleLayout2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/nameLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nameText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="汪小飛"
                            android:textColor="#19B0ED"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/name2Text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="先生" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/phoneText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0987777777" />

                    <TextView
                        android:id="@+id/addressText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高雄市鹽埕區五福四路164號" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconImage2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/new_icon" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#989898" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/peopleDetailCLayout"
                android:layout_width="match_parent"
                android:layout_height="73dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/timeGline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="10dp" />

                <TextView
                    android:id="@+id/dateTimeText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/02"
                    android:textColor="#FB8527"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/timeGline3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/timeText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:26"
                    android:textColor="#FB8527"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/timeGline3"
                    app:layout_constraintTop_toBottomOf="@+id/dateTimeText3" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/nameGline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.22" />

                <TextView
                    android:id="@+id/nameText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三號測試員"
                    android:textColor="#19B0ED"
                    android:textSize="25sp"
                    app:layout_constraintStart_toStartOf="@+id/nameGline3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/name2Text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:text="先生"
                    app:layout_constraintStart_toEndOf="@+id/nameText3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/phoneText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0933333333"
                    app:layout_constraintStart_toStartOf="@+id/nameGline3"
                    app:layout_constraintTop_toBottomOf="@+id/nameText3" />

                <TextView
                    android:id="@+id/addressText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="花蓮縣三號路"
                    app:layout_constraintStart_toStartOf="@+id/nameGline3"
                    app:layout_constraintTop_toBottomOf="@+id/phoneText3" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/iconGline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.8053528" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/iconGline3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/new_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F2F2F2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/valuation_imgBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:src="@drawable/valuation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="估價單"
                android:textColor="#D5D5D5"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/order_imgBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:src="@drawable/order_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="訂單"
                android:textColor="#19B0ED"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/calendar_imgBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:src="@drawable/calendar_btn_drawable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行事曆"
                android:textColor="#D5D5D5"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/system_imgBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:src="@drawable/system_btn_drawable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人事系統"
                android:textColor="#D5D5D5"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/setting_imgBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:src="@drawable/setting_btn_drawable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的系統"
                android:textColor="#D5D5D5"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>